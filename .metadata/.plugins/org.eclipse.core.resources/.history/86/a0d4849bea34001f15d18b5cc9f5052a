#ifndef DTFECHAHORA_H_
#define DTFECHAHORA_H_

#include <string>
using namespace ::std;

class DtFechaHora {
public:
	DtFechaHora(int,int,int,int,int,int);
	int getAnio();
	int getDia();
	int getMes();
	int getHora();
    int getMinuto();
    int getSegundo();

	string mostrarFecha();

	virtual ~DtFechaHora();

private:
	int dia, mes, anio;
	int hora;
    int minuto;
    int segundo;

};

#endif /* DTFECHAHORA_H_ */
